#!/bin/sh

alias afk="slock"
alias ag="ag --hidden --ignore .git"
alias cp="cp -iv"
alias ls="ls --color=always"
alias mv="mv -iv"
alias open="xdg-open"
alias rm="rm -vI"
alias scrot="scrot -s && mv *_scrot.png $HOME/screenshots/"
alias tmux="tmux -2"
alias uireload="xrdb -merge $HOME/.Xresources"
alias vim="nvim"
alias xclip="xclip -selection c"
